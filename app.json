{
    "expo": {
        "name": "ev-costs-calculator",
        "slug": "ev-costs-calculator",
        "version": "1.0.1",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "scheme": "evcostscalculator",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.boa50.evcostscalculator",
            "infoPlist": {
                "CFBundleAllowMixedLocalizations": true
            }
        },
        "android": {
            "adaptiveIcon": {
                "backgroundColor": "#009689",
                "foregroundImage": "./assets/images/android-icon-foreground.png"
            },
            "edgeToEdgeEnabled": true,
            "predictiveBackGestureEnabled": false,
            "package": "com.boa50.evcostscalculator"
        },
        "locales": {
            "en": "./i18n/metadata/en.json",
            "pt": "./i18n/metadata/pt.json"
        },
        "web": {
            "output": "static",
            "bundler": "metro",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/splash-icon.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#009689"
                }
            ],
            "expo-localization",
            [
                "react-native-google-mobile-ads",
                {
                    "androidAppId": "ca-app-pub-8304199258405499~5711776730",
                    "iosAppId": "ca-app-pub-8304199258405499~5711776730",
                    "delayAppMeasurementInit": true,
                    "userTrackingUsageDescription": "This identifier will be used to deliver personalized ads to you."
                }
            ],
            [
                "expo-build-properties",
                {
                    "android": {
                        "enableProguardInReleaseBuilds": true,
                        "enableShrinkResourcesInReleaseBuilds": true,
                        "extraProguardRules": "-keep class com.google.android.gms.internal.consent_sdk.** { *; }"
                    }
                }
            ],
            [
                "expo-tracking-transparency",
                {
                    "userTrackingPermission": "This identifier will be used to deliver personalized ads to you."
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true,
            "reactCompiler": true
        },
        "extra": {
            "router": {},
            "eas": {
                "projectId": "6be23836-304a-4d08-a276-0645d3b773ea"
            }
        }
    }
}
